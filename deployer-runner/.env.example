# ==============================================================================
# GitHub Actions Runner - Deployer Configuration
# ==============================================================================

# CONFIGURAÇÃO OBRIGATÓRIA - Personal Access Token (PAT)
# ------------------------------------------------------------------------------

# Personal Access Token do GitHub (com permissões apropriadas)
# Requerido: repo, admin:org (para organização) ou admin:repo_hook (para repositório)
GITHUB_PAT=""

# Owner da organização ou usuário (obrigatório)
GITHUB_OWNER=""

# Repositório específico (opcional - se não informado, configura para toda a organização)
GITHUB_REPOSITORY=""

# CONFIGURAÇÕES DO RUNNER
# ------------------------------------------------------------------------------

# Versão do GitHub Actions Runner (padrão: 2.329.0)
RUNNER_VERSION="2.329.0"

# Nome do runner (padrão: deployer-runner-{hostname})
RUNNER_NAME="deployer-runner-prod"

# Labels do runner (padrão: self-hosted,deployer,linux,ubuntu,php,composer)
RUNNER_LABELS="self-hosted,deployer,linux,ubuntu,php,composer"

# Grupo do runner (padrão: default)
RUNNER_GROUP="default"

# CONFIGURAÇÕES DE DEPLOYMENT
# ------------------------------------------------------------------------------

# Configuração do servidor de destino
SERVER_IP="192.168.1.100"
SERVER_PORT="22"

# Chave SSH privada para deployment (multiline)
SSH_PRIVATE_KEY="-----BEGIN OPENSSH PRIVATE KEY-----
sua_chave_privada_ssh_aqui_linha_1
sua_chave_privada_ssh_aqui_linha_2
...
-----END OPENSSH PRIVATE KEY-----"

# Ambiente de deployment
DEPLOY_ENV="production"

# Arquivo de configuração do Deployer
DEPLOY_FILE="deploy.php"

# CONFIGURAÇÕES DO DOCKER
# ------------------------------------------------------------------------------

# Usuário Docker Hub
DOCKER_USER="seu_usuario_dockerhub"

# Se deve fazer push das imagens (true/false)
DOCKER_PUSH="false"

# EXEMPLOS DE CONFIGURAÇÃO
# ------------------------------------------------------------------------------

# Exemplo 1: Deployer para repositório específico
# GITHUB_PAT="ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# GITHUB_OWNER="minha-empresa"
# GITHUB_REPOSITORY="aplicacao-web"
# RUNNER_NAME="webapp-deployer-01"
# RUNNER_LABELS="deployer,webapp,php,production"

# Exemplo 2: Deployer para múltiplos projetos da organização
# GITHUB_PAT="ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# GITHUB_OWNER="minha-empresa"
# RUNNER_LABELS="deployer,multi-project,php,docker"
# RUNNER_GROUP="ci-cd"